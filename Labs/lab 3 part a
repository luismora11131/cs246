#include <iostream>
using namespace std;
bool IsSorted(int arr[], int a){
for(int x=0;x<a;x++){
  if(arr[x]>arr[x+1]){
    return false;
  }
  else{
    return true;
  }
  }
}
int main() {
  int numbers[]={1,2,7,4,5,6};
  if(IsSorted(numbers,5)==false){
    cout<<"false";
  }
  if(IsSorted(numbers,5)==true){
    cout<<"true";
  }

  IsSorted(numbers,5);
}
